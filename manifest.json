{
    "manifest_version": 3,
    "name": "DFK assistant",
    "version": "1.2",
    
    "action": {
     
      "default_icon": {
        "16": "./img/128.png",
        "48": "./img/128.png",
        "128": "./img/128.png"
      }
    },
    "icons": {
      "16": "./img/128.png",
      "48": "./img/128.png",
      "128": "./img/128.png"
    },
    "description": "A game tool for Defi Kingdoms, mainly used to help players find the most suitable leased heroes when summoning currently.",
    "content_scripts": [
        {
          "matches": ["https://game.defikingdoms.com/","https://beta.defikingdoms.com/"],
          "js": ["./js/entrance.js"],
          "css": ["./styles/styles.css"],
          "run_at": "document_end"
        }
       
      ],
      "permissions": [
        "storage"
      ]
  }